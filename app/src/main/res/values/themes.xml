<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CelestialConnect" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--Secondary brand color.-->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--    Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--Customize your theme here.-->
    </style>
        <style name="DialogAnimation">
            <item name="android:windowEnterAnimation">@anim/slide_in </item>
            <item name="android:windowExitAnimation">@anim/slide_out </item>
        </style>

    <style name="Theme.CelestialConnect" parent="Base.Theme.CelestialConnect" />
    <style name="Theme.CelestialConnect.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CelestialConnect.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CelestialConnect.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>